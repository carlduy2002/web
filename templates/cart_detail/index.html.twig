<html>

{% block title %}{% endblock %}


{% block body %}
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap-theme.min.css">
    <script src="https://code.jquery.com/jquery-1.12.4.min.js" integrity="sha384-nvAa0+6Qg9clwYCGGPpDQLVpLNn0fRaROjHqs13t4Ggj3Ez50XnGQqc/r8MhnRDZ" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
</head>
<style>
    body{
        background: url('../Image/Background-shoe-shop.jpg');
    }
    #navbar{
        height: 130px;
        background: rgba(0, 0, 0, 0.8);
    }
    .logo{
        width: 175px;
        height: 105px;
        margin-top: -3px;
    }
    .nav{
        margin-top: 40px;
        margin-left: 100px;
    }
    .navbar-default .navbar-nav>li>a{
        color:#fff;
    }
    img{
        width: 300px;
        height: 300px;
        margin-top: 20px;
    }
    #wrap{

    }
    .total-detail{
        width: 500px;
        margin-left: 520px;
        background: rgba(0, 0, 0, 0.8);
        box-shadow: 2px 2px 17px 10px rgba(255, 255, 255, 0.8);
    }
    .detail{
        margin-left: 97px;
        margin-top: 40px;
    }
    .detail-info{
        color: white;
    }
    p{
        text-align: center;
    }
    h4{
        text-align:center;
    }
</style>
<body>
    <div class="container-fluid">
        <div>
            <nav class="navbar navbar-default" id="navbar">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" 
                    data-toggle="collapse" data-target="#myNavbar">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                        <a class="navbar-brand" href="Home.php"><img src="../Image/DHC.jpg" class="logo"></a>
                </div>
                <div class="collapse navbar-collapse" id="myNavbar">
                    <ul class="nav navbar-nav">
                        <li><a href="{{path ('home_page')}}">Home</a></li>
                        <li><a href="{{path ('product_page')}}">Product</a></li>
                    </ul>
                </div>
            </nav>

            <div id="wrap">
            {% for c in contain %}
                <div class="total-detail">
                    <div class="detail">
                        <img src="./Image/{{c.Pro_Image}}">
                    </div>
                    <div class="detail-info">
                        <p class="name-img">{{c.Name}}</p>
                        <h4 class="price"><span>&#8363;</span>{{c.Qty_Pro}}</h4>
                        <P>{{c.Sale_Price}}</P>
                    </div>
                </div>
            {% endfor %}
            </div>
        </div>
    </div>
</body>
{% endblock %}
</html>