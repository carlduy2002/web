                        <td>{{u.Email}}</td>
                        <td>{{u.Gender}}</td>
                        <td>{{u.Birthday|date('y-m-d')}}</td>
                        <td>{{u.Address}}</td>
                        <td>{{u.roles ? u.roles|json_encode : ''}}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
