{% extends 'base.html.twig' %}
{% block title %}{% endblock %}
{% block body %}

<body>
<section id="hero">
    <div class="container-fluid">
        <div class="container-mb3" style="min-height: 50vh">
             <div class="row heading">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Address</th>
                <th>Phone</th>

                <th style="width:185px;" class="action"><a style="color: #272727;" href="{{path ('add_shop')}}">
                        <i class="glyphicon glyphicon-plus"></i> Add new Shop</a>
                </th>
            </tr>
        </thead>
        <tbody>
            {% for s in shop %}
            <tr>
                <td>{{s.id}}</td>
                <td>{{s.Name}}</td>
                <td>{{s.Email}}</td>
                <td>{{s.Address}}</td>
                <td>{{s.Phone}}</td>

                <td><a style="color: #272727; margin-left:30px;" href="{{path ('edit_shop', {'id' : s.id})}}" class="glyphicon glyphicon-pencil"></a> 
                <a style="color: #272727; margin-left:30px;" href="{{path ('deleteShop', {'id' : s.id})}}" class="glyphicon glyphicon-remove"></a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
</div>
</div>
</div>
</section>
</body>
{% endblock %}
