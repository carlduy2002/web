
{% extends 'base.html.twig' %}

{% block title %}{% endblock %}
{% block body %}
<style>
    .table{
        margin-top: 18px;
    }
</style>
<section id="hero">
    <div class="container-fluid">
        <div class="container">
             <div class="row heading">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Price</th>
                    <th scope="col">Image</th>
                    <th scope="col">Detail</th>
                    <th style="width:160px;">
                        <a href="{{path ('add_Product')}}"><i class="glyphicon glyphicon-plus"></i> Add new product </a>
                    </th>
                </tr>
            </thead>
            <tbody>
                {% for p in product %}
                    <tr>
                        <td>{{p.id}}</td>
                        <td>{{p.Name}}</td>
                        <td>{{p.Quantity}}</td>
                        <td>{{p.Price|number_format(0, '.', ',')}}<span>&#8363;</span></td>
                        <td >
                        <img src="./upload/Image/{{p.Image}}" style="height: 100px; width: 100px;">
                       </td>
                        <td>{{p.Detail}}</td>
                        <td><a style="color: #272727; margin-left:30px;" href="{{path ('editProduct', {'id' : p.id})}}" class="glyphicon glyphicon-pencil"></a> 
                        <a style="color: #272727; margin-left:30px;" href="{{path ('deleteProduct', {'id' : p.id})}}" class="glyphicon glyphicon-remove"></a></td>    
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        </div>
        </div>
    </div>
</section>
{% endblock %}
