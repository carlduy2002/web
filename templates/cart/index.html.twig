{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
<style>
    .cover-order{
        margin-bottom: 10px;
    }
    .total{
        margin-top: 150px;
        margin-left: 20px;
    }
    #btn-order{
        margin-left: 20px;
    }
    .cover{
        display: inline-block;
        margin-top: -2px;
        margin-left: 20px;
    }
    img{
        width: 300px;
        height: 300px;
    }
</style>


<body>
<section id="hero">
    <div class="container-fluid">
        <div class="container-mb3" style="min-height: 60vh">
             <div class="row heading">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Price</th>
                    <th scope="col">Product Image</th>
                    <th scope="col">Sum</th>
                    <th  style="width:160px;"><a style="color: #272727;" href="{{path ('add_order', {'total': total})}}" >
                        <i class="glyphicon glyphicon-plus"></i>Order</a>
                    </th>
                </tr>
            </thead>
            <tbody>
                {% for c in cart %}
                    <tr>
                        <td>{{c.Name}}</td>
                        <td>{{c.Quantity}}</td>
                        <td>{{c.Sale_Price|number_format(0, '.', ',')}}<span>&#8363;</span></td>
                        <td >
                        <img <img src="./Image/{{c.Pro_Image}}" style="height: 100px; width: 100px;">
                       </td>
                        <td>{{(c.Sale_Price * c.Quantity)|number_format(0, '.', ',')}}<span>&#8363;</span></td>
                        <td><a style="color: #272727; margin-left:10px;" href="{{path ('update_cart', {'id' : c.id})}}" class="glyphicon glyphicon-pencil"></a> 
                        <a style="color: #272727; margin-left:10px;" href="{{path ('delete_cart', {'id' : c.id})}}" class="glyphicon glyphicon-remove"></a></td>    
                    </tr>
                {% endfor %}
                    <tr>
                        <td><b>Total price</b></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td>{{total|number_format(0, '.', ',')}}<span>&#8363;</span></td>
                    </tr>
            </tbody>
        </table>
        </div>
        </div>
    </div>
</section>
    <div class="cover-order">
        <h4 class="total">Total {{total|number_format(0, '.', ',')}} <span>&#8363;</span></h4>
        <a  id="btn-order" href="{{path ('add_order', {'total': total})}}" class="btn btn-primary" style= "background-color: rgba(13,92,182,255);" type="submit" name="payment">Order</a> 
    </div> 
     {% for c in cart %}
        <div class="cover"
            <div>
                <img src="./Image/{{c.Pro_Image}}"/>

                <div>
                    <h3>{{c.Name}}</h3>
                    <h5>{{c.Quantity}}</h5>
                    <h5>{{(c.Price * c.Quantity)|number_format(0, '.', ',')}} <span>&#8363;</span></h5>
                </div>
                <div>
                    <a href="{{path ('update_cart', {'id' : c.id})}}"><button class="btn btn-primary">Update</button></a>
                    <a href="{{path ('delete_cart', {'id' : c.id})}}"><button class="btn btn-primary">Delete</button></a>
                </div>
            </div>
        </div>
   {% endfor %} 
</body>
{% endblock %} 



