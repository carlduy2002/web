{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

<head>

    <link rel="stylesheet" href="product.css">
    <script src="product.js" defer></script>

</head>
{# <style>
   #images{
      height: 100%;
      weight
   }
</style> #}

<body>
<section id="hero">
    <div class="search">
    <form action="{{path('search_page')}}" method="post" class="search-bar" >
        <input type="text" class="" placeholder="Search" name="search-txt">
        <button type="summit"><i class="bi bi-search"></i></button>
    </form>
  </div>
<div class="container-product">

   <h3 class="title"> The keyword: {{keyword}}, {{items}} item(s)</h3>

   <div class="products-container">
{% for product in products %}
      <div class="product" data-name="{{product.id}}">
         <img src="./Image/{{product.Pro_Image}}" alt="" id="images" style="width:35%">
         <h3>{{product.Name}}</h3>
         <div class="price">{{product.Sale_Price|number_format(0, '.', ',')}}<span> &#8363;</span></div>
      </div>
{% endfor %}
   </div>

</div>

<div class="products-preview">
{% for product in products %}
   <div class="preview" data-target="{{product.id}}">
      <i class="fas fa-times"></i>
      <img src="./Image/{{product.Pro_Image}}" alt="">
      <h3></h3>
      <div class="stars">
         <i class="fas fa-star"></i>
         <i class="fas fa-star"></i>
         <i class="fas fa-star"></i>
         <i class="fas fa-star"></i>
         <i class="fas fa-star-half-alt"></i>
         <span>( 250 )</span>
      </div>
      {# <p>{{product.Detail}}</p> #}
      <div class="price">{{product.Sale_Price|number_format(0, '.', ',')}}<span> &#8363;</span>
        </div>
      <div class="buttons">
         {# <a href="#" class="buy">buy now</a> #}
         <a href="{{path ('cart_page', {'id' : product.id})}}" class="cart">add to cart</a>
      </div>
   </div>
{% endfor %}
</div>
</section>
</body>

{% endblock %}